{
  "name": "size-limit-action",
  "version": "0.1.0",
  "private": true,
  "description": "size-limit action",
  "main": "lib/main.js",
  "license": "ISC",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "build": "ncc build src/main.ts -o dist",
    "size": "npm run build && size-limit"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4500 ms"
    }
  ],
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/exec": "^1.0.3",
    "@actions/github": "^2.1.1",
    "bytes": "^3.1.0",
    "lodash": "^4.17.15",
    "markdown-table": "^2.0.0"
  },
  "devDependencies": {
    "@size-limit/file": "^4.3.1",
    "@size-limit/time": "^4.3.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "size-limit": "^4.3.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.6.4"
  }
}
